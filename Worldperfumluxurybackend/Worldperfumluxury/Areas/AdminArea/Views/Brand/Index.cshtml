@model List<Brand>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="container mt-3">
    <div class="row">
        <div class="header d-flex justify-content-between mt-3">
            <h3>Brands</h3>
            <div class="ml-4">
                <a class="btn btn-success" asp-controller="Brand" asp-action="Create">Create</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var brand in Model)
                    {
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                <img src="~/assets/img/logo/@brand.Image" style="width:250px;height:150px; border-radius:unset" alt="slider" />
                            </td>
                            <td>
                               
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@brand.Id">
                                    <i class="icon-pencil"></i>
                                </a>
                                <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@brand.Id">
                                    <button class="btn btn-danger btn-sm" type="submit">
                                        <i class="fas fa-times-circle"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
  


