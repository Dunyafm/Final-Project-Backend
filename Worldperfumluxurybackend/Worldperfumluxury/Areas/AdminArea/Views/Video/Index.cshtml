@model List<Video>
@{ ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
    int count = 1;

}
<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Poster</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-controller="Video" asp-action="Create">Create</a></div>




                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th> No </th>
                                    <th> Name </th>
                                    <th> Setting </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var video in Model)
                                 {
                                    <tr>
                                        <td> @count </td>
                                        <td> @video.Desc </td>
                                        <td> @video.Link </td>

                                        <td>
                                            <form style="display:inline;" asp-action="Delete" asp-route-Id="@video.Id">
                                                <button type="submit" class="btn btn-danger btn-sm"><i class="icon-close"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                    count++;
                                 }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


