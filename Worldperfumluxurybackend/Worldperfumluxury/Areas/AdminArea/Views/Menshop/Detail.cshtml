
@model Product

@{
    ViewData["Title"] = "Product Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <h4>Product detail</h4>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Product</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-action="Create">Create</a></div>




                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>

                            </thead>
                            <tbody style="width:300px">

                                <img style="width: 300px; height: 150px; border-radius: unset" src="~/assets/img/parfums/@Model.Images" alt="Product" /></td>
                                <h5 class="mt-5"> @Model.Name</h5>
                                <h6 class="mt-3">@Model.Desc</h6>
                                <h6 class="mt-3">@Model.Price</h6>
                                @*<h6 class="mt-3">@Model.Image</h6>*@


                                <a class="btn btn-primary btn-sm" asp-action="Index">Go Back</a>

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



/h1>

