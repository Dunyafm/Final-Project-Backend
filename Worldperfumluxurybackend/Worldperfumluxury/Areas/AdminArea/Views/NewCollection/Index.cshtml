@model List<NewCollection>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<div class="container mt-3">
    <div class="row">
        <div class="header d-flex justify-content-between mt-3">
            <h3>New Collection</h3>
            <div class="ml-4">
                <a class="btn btn-success" asp-controller="NewCollection" asp-action="Create">Create</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Number
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            Settings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var newCollection in Model)
                    {
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                <img src="~/assets/img/slider/@newCollection.Image" style="width:250px;height:150px; border-radius:unset" alt="slider" />
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-id="@newCollection.Id">
                                    <i class="icon-options"></i>
                                </a>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@newCollection.Id">
                                    <i class="icon-pencil"></i>
                                </a>
                                <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@newCollection.Id">
                                    <button class="btn btn-danger btn-sm" type="submit">
                                        <i class=" icon-close"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>
