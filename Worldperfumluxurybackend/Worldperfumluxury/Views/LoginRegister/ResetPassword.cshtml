@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form class="pt-3" method="post" asp-action="ResetPassword">
                            <div class="form-group">
                                <input asp-for="Password" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Password ...">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Confirm password ...">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">Reset password</button>
                            </div>
                            <input type="hidden" asp-for="Token" name="token" value="@Model.Token" />
                            <input type="hidden" asp-for="Email" name="email" value="@Model.Email" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}

