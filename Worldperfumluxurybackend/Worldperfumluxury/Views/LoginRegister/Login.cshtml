@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div style="margin-left:500px" class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">

                        <h4>Hello! let's get started</h4>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form class="pt-3" method="post" asp-action="Login">
                            <div class="form-group">
                                <input asp-for="UserNameOrEmail" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username or email">
                                <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>


                            <div class="mt-3">
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="../../index.html">SIGN IN</button>
                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" style="margin:0px !important" class="form-check-input">
                                        Keep me signed in
                                    </label>
                                </div>
                                <a asp-controller="Login" asp-action="ForgotPassword" class="auth-link text-black">Forgot password?</a>
                            </div>
                            <div class="mb-2">
                                <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                                    <i class="ti-facebook me-2"></i>Connect using facebook
                                </button>
                            </div>
                            <div class="text-center mt-4 fw-light">
                                Şifrənizi unutdunuz? <a asp-action="Register" class="text-primary" asp-controller="LoginRegister">Register</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>





