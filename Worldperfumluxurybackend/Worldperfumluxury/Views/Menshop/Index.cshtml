            val.addEventListener("click", function (e) {
                e.preventDefault()

                var id = this.getAttribute("data-id")


                $.ajax({
                    url: "https://localhost:44334/product/AddBasket",
                    data: {
                        id: id
                    },
                    dataType: 'json',
                    type: "post",
                    success: function (data) {
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: 'Uğurla əlavə edildi',
                            showConfirmButton: false,
                            timer: 1000
                        })
                    }
                })
            })
        })
    </script>

